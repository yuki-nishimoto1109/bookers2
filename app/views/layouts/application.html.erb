<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href=<%= root_path %>>Bookers</a>
          <div class="collapse navbar-collapse" id="navbarNavDropDown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <!--ログイン状態のヘッダー-->
                <li>
                  <a class="nav-link text-light" href=<%= user_path(current_user.id) %>>
                    <i class="fas fa-home"></i> Home
                  </a>
                </li>
                <li>
                  <a class="nav-link text-light" href="">
                    <i class="fas fa-users"></i> Users
                  </a>
                </li>
                <li>
                  <a class="nav-link text-light" href="">
                    <i class="fas fa-book-open"></i> Books
                  </a>
                </li>
                <li>
                  <a class="nav-link text-light" href= <%= destroy_user_session_path %> data-method="delete">
                    <i class="fas fa-sign-out-alt"></i> Log out
                  </a>
                </li>
              <% else  %>
              <!--未ログイン時のヘッダー-->
                <li>
                  <a class="nav-link text-light" href=<%= root_path %>>
                    <i class="fas fa-home"></i> Home
                  </a>
                </li>
                <li>
                  <a class="nav-link text-light" href=<%= about_path %>>
                    <i class="fas fa-link"></i> About
                  </a>
                </li>
                <li>
                  <a class="nav-link text-light" href= <%= new_user_registration_path %>>
                    <i class="fas fa-user-plus"></i> Sign up
                  </a>
                </li>
                <li>
                  <a class="nav-link text-light" href= <%= new_user_session_path %>>
                    <i class="fas fa-sign-in-alt"></i> Log in
                  </a>
                </li>
              <% end  %>

            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
