<p><%= flash[:notice] %></p>

<div class="container px-5 px-sm-0">

  <!--errormsg-->
  <div class="error_explanation">
    <%= render 'layouts/errormsg', obj: @book %>
  </div>

  <div class="row">
    <!--ユーザー情報sidebar-->
    <div class="col-md-3">
      <%= render 'layouts/userinfo', user: @user, book: @book %>
    </div>

    <!--Books一覧表示-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <!--<th colspan="3"></th>-->
          </tr>
        </thead>
         <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image(80,80) %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>