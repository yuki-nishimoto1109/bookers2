<p><%= flash[:notice] %></p>

<div class="container px-5 px-sm-0">

  <!--errormsg-->
  <div class="error_explanation">
    <%= render 'layouts/errormsg', obj: @book %>
  </div>

  <div class="row">
    <!--ユーザー情報sidebar-->
    <div class="col-md-3">
      <%= render 'layouts/userinfo', user: @user, book: @book %>
    </div>

    <!--Users一覧表示-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
         <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(80,80) %></td>
          <td class="align-middle"><%= user.name %></td>
          <td class="align-middle"><%= link_to "Show", user_path(user.id), class: "btn btn-info" %></td>
        </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>