<p></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/userinfo', user: @user, book: @book %>
    </div>

    <!--投稿Books一覧表示-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
         <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.get_book_image(80,80) %></td>
          <td>
            <a href=<%= book_path(book.id) %>><%= book.title %></a>
          </td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>